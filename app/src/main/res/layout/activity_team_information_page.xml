<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamInformationPage"
    android:background="@drawable/login_signup_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello."
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/hello">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Are Shovl Team."
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/shovl"
        android:layout_below="@id/hello">
    </TextView>

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shovl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="We Are Team of Five Developer"
        android:textColor="@color/black"
        android:textSize="25dp"></TextView>

    <TextView
        android:id="@+id/sajan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sajan Tamang"
        android:textColor="@color/primaryColor"
        android:textSize="25dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yash Patel"
        android:textSize="25dp"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/yash"
        android:layout_below="@id/sajan">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nish Varia"
        android:textSize="25dp"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/nish"
        android:layout_below="@id/yash">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krishna Parmar"
        android:textSize="25dp"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/krishna"
        android:layout_below="@id/nish">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manav Kumbhani"
        android:textSize="25dp"
        android:textColor="@color/primaryColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/manav"
        android:layout_below="@id/krishna">
    </TextView>

    <TextView
        android:id="@+id/contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Contact Us "
        android:textColor="@color/primaryColor"
        android:textSize="25dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shovlappmdev@gmail.com"
        android:textSize="25dp"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/email"
        android:layout_below="@id/contactus">
    </TextView>

    <Button
        android:id="@+id/backbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="70dp"
        android:text="BACK"
        android:textSize="15dp"
        android:textStyle="bold">
    </Button>




</RelativeLayout>