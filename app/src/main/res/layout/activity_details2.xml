<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        app:title="Advertisement Details"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_posted_by_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_details"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Posted by : XXXX XXXX"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/tv_posted_by_details"
                android:orientation="horizontal"
                android:weightSum="8">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:sliderAnimationDuration="1200"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="@color/primaryColor"
                        app:sliderIndicatorUnselectedColor="@color/greySoft"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_1"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:hint="Location"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/location_icon" />


            <TextView
                android:id="@+id/tv_description_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_location"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:text="this is a short des about the property"
                android:layout_marginBottom="8dp"
                android:scrollbars="horizontal|vertical"
                android:textSize="16sp"
                android:background="@drawable/grey_tint_background"
                android:verticalScrollbarPosition="defaultPosition"
                android:padding="6dp"/>

            <LinearLayout
                android:id="@+id/linlayoutmiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_description_details"
                android:layout_margin="8dp"
                android:background="@drawable/blue_border"
                android:orientation="vertical"
                android:padding="4dp"
                >

                <TextView
                    android:text="Date Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/calender_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    >

                    <TextView
                        android:id="@+id/ad_tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="From:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ad_tv_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_tint_background"
                        android:gravity="center"
                        android:hint="MM/DD/YY"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textSize="18sp"
                        android:padding="6dp"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ad_tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="End:"
                        android:layout_margin="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ad_tv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_tint_background"
                        android:gravity="center"
                        android:text="MM/DD/YY"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="6dp"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlayouttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linlayoutmiddle"
                android:layout_margin="8dp"
                android:background="@drawable/blue_border"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <TextView
                    android:text="Time Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/clock_icon"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/tv_pl_1_details"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="From:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time_from_details"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_tint_background"
                        android:gravity="center"
                        android:hint="hh:mm"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="6dp"
android:layout_margin="5dp"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pl_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="End:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time_to_details"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_tint_background"
                        android:gravity="center"
                        android:text="hh:mm"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="6dp"
                        android:layout_margin="5dp"

                        tools:ignore="TouchTargetSizeCheck" />



                </LinearLayout>

            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apply_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:padding="8dp"
                android:text="Apply "
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
