<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        android:focusable="true"
        android:paddingBottom="5dp"
        android:background="@color/greySoft">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_rv_posts"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/greySoft"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_rv_title_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help wanted"
            android:textColor="@color/primaryColor"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tv_rv_location_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Georgian Dr., Barrie, Ontario"
                android:textColor="@color/primarySecondary"
                android:maxLines="2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:paddingBottom="8dp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>